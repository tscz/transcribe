{
    "name": "transcribe",
    "version": "0.0.1",
    "private": true,
    "homepage": "http://tscz.github.io/transcribe",
    "dependencies": {
        "@material-ui/core": "^4.7.2",
        "@material-ui/icons": "^4.5.1",
        "@material-ui/lab": "^4.0.0-alpha.32",
        "@reduxjs/toolkit": "^1.1.0",
        "clsx": "^1.0.4",
        "file-saver": "^2.0.2",
        "jszip": "^3.2.2",
        "peaks.js": "0.15.0",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-redux": "^7.1.3",
        "react-scripts": "^3.3.0",
        "redux": "^4.0.4",
        "redux-devtools-extension": "^2.13.8",
        "tone": "^13.8.25"
    },
    "scripts": {
        "start": "npm run version && react-scripts start",
        "build": "npm run version && react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "predeploy": "npm build",
        "deploy": "gh-pages -d build",
        "update": "node ./node_modules/npm-check/bin/cli -u",
        "git-info": "git log -1 --oneline > public/gitInfo.txt",
        "npm-info": "node -p \"require('./package.json').version\" > public/npmInfo.txt",
        "version": "npm run git-info && npm run npm-info"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "prettier"
        ],
        "plugins": [
            "simple-import-sort",
            "prettier"
        ],
        "rules": {
            "simple-import-sort/sort": "warn",
            "sort-imports": "off",
            "prettier/prettier": "error"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/file-saver": "^2.0.1",
        "@types/jest": "24.0.23",
        "@types/jszip": "^3.1.6",
        "@types/node": "12.12.14",
        "@types/react": "^16.9.15",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.5",
        "@types/tone": "https://github.com/Tonejs/TypeScript.git",
        "@typescript-eslint/eslint-plugin": "2.10.0",
        "@typescript-eslint/parser": "2.10.0",
        "eslint": "6.7.2",
        "eslint-config-prettier": "6.7.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-flowtype": "4.5.2",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "7.17.0",
        "eslint-plugin-react-hooks": "2.3.0",
        "eslint-plugin-simple-import-sort": "5.0.0",
        "gh-pages": "^2.1.1",
        "npm-check": "^5.9.0",
        "prettier": "1.19.1",
        "tslint": "^5.20.1",
        "typescript": "3.7.3"
    }
}