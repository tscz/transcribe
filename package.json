{
    "name": "transcribe",
    "version": "0.0.2",
    "private": true,
    "homepage": "http://tscz.github.io/transcribe",
    "dependencies": {
        "@material-ui/core": "^4.8.0",
        "@material-ui/icons": "^4.5.1",
        "@material-ui/lab": "^4.0.0-alpha.32",
        "@reduxjs/toolkit": "^1.1.0",
        "@storybook/react": "^5.2.8",
        "clsx": "^1.0.4",
        "cross-env": "^6.0.3",
        "file-saver": "^2.0.2",
        "jszip": "^3.2.2",
        "peaks.js": "0.15.0",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-redux": "^7.1.3",
        "react-scripts": "^3.3.0",
        "redux": "^4.0.4",
        "redux-devtools-extension": "^2.13.8",
        "tone": "^13.8.25"
    },
    "scripts": {
        "start": "npm run setEnv --command=startWithoutEnv",
        "startWithoutEnv": "react-scripts start",
        "build": "npm run setEnv --command=buildWithoutEnv",
        "buildWithoutEnv": "react-scripts build",
        "test": "npm run setEnv --command=testWithoutEnv",
        "testWithoutEnv": "react-scripts test",
        "eject": "react-scripts eject",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "update": "node ./node_modules/npm-check/bin/cli -u",
        "setEnv": "cross-env REACT_APP_VERSION=$npm_package_version REACT_APP_VERSION_HASH=$(git log --format=%h -1) REACT_APP_VERSION_DESCRIPTION=\"$(git log --format=%s -1)\" npm run $npm_config_command",
        "storybook": "start-storybook -p 9009 -s public",
        "build-storybook": "build-storybook -s public -o build-storybook",
        "deploy-storybook": "gh-pages -d build-storybook -b storybook"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "prettier"
        ],
        "plugins": [
            "simple-import-sort",
            "prettier"
        ],
        "rules": {
            "simple-import-sort/sort": "warn",
            "sort-imports": "off",
            "prettier/prettier": "error"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/file-saver": "^2.0.1",
        "@types/jest": "24.0.23",
        "@types/jszip": "^3.1.6",
        "@types/node": "^12.12.17",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.5",
        "@types/tone": "https://github.com/Tonejs/TypeScript.git",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "eslint": "6.7.2",
        "eslint-config-prettier": "6.7.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-flowtype": "4.5.2",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "7.17.0",
        "eslint-plugin-react-hooks": "2.3.0",
        "eslint-plugin-simple-import-sort": "5.0.0",
        "gh-pages": "^2.1.1",
        "npm-check": "^5.9.0",
        "prettier": "1.19.1",
        "tslint": "^5.20.1",
        "typescript": "3.7.3"
    }
}