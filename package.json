{
  "name": "transcribe",
  "version": "0.0.9",
  "private": true,
  "homepage": "http://tscz.github.io/transcribe",
  "scripts": {
    "start": "npm run setEnv --command=startWithoutEnv",
    "startWithoutEnv": "react-scripts start",
    "build": "npm run setEnv --command=buildWithoutEnv",
    "buildWithoutEnv": "react-scripts build",
    "test": "npm run setEnv --command=testWithoutEnv",
    "testWithoutEnv": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "update": "yarn upgrade-interactive",
    "setEnv": "cross-env-shell REACT_APP_VERSION=$npm_package_version REACT_APP_VERSION_HASH=\"$(git log --format=%h -1)\" REACT_APP_VERSION_DESCRIPTION=\"$(git log --format=%s -1)\" npm run $npm_config_command",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public -o build-storybook",
    "deploy-storybook": "gh-pages -d build-storybook -b storybook",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext json",
    "lint:fix": "npm run lint -- --fix",
    "lint:check": "eslint --print-config src/components/app/app.tsx | eslint-config-prettier-check",
    "coverage": "npm run testWithoutEnv -- --coverage",
    "doc": "ts-node --project doc/tsconfig.json doc/diagrams/generate.ts"
  },
  "dependencies": {
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@reduxjs/toolkit": "1.4.0",
    "@storybook/addon-actions": "^6.0.12",
    "@storybook/addon-docs": "^6.0.7",
    "@storybook/addon-knobs": "^6.0.7",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "6.0.7",
    "@types/debug": "4.1.5",
    "@types/enzyme": "3.10.5",
    "@types/lodash": "^4.14.159",
    "clsx": "1.1.1",
    "cross-env": "7.0.2",
    "debug": "4.1.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "file-saver": "2.0.2",
    "jszip": "3.5.0",
    "node-plantuml": "^0.9.0",
    "peaks.js": "0.21.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.1",
    "react-scripts": "3.4.3",
    "react-test-renderer": "16.13.1",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "tone": "14.7.39",
    "ts-node": "^8.10.2",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@types/file-saver": "2.0.1",
    "@types/jest": "26.0.9",
    "@types/jszip": "3.4.1",
    "@types/node": "14.0.27",
    "@types/react": "16.9.46",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "7.1.9",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "gh-pages": "3.1.0",
    "jest-mock-extended": "1.0.9",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "simple-import-sort",
      "import",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-empty-function": "off",
      "simple-import-sort/sort": "error",
      "sort-imports": "off",
      "import/order": "off",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-relative-parent-imports": "off",
      "no-console": "error",
      "react/prop-types": "off",
      "react/forbid-dom-props": [
        2,
        {
          "forbid": [
            "style"
          ]
        }
      ],
      "react/forbid-component-props": [
        2,
        {
          "forbid": [
            "style"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "none",
          "arrowParens": "always"
        }
      ],
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            "../*"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
